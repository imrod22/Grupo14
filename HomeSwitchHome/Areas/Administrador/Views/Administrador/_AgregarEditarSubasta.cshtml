<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content px-4 py-2">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalCenterTitle">GESTION DE SUBASTA</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
        </div>
        <div class="modal-body">

            <form>
                <div class="form-row">                    

                    <input style="display : none" id="identificadorSubasta">
                    <div class="form-group col-md-8">
                        <label for="nombre">Fecha de Subasta:</label>
                        <input ng-model="fechaComienzo" type="text" name="daterange"  />

                        <input type="text" id="fechaSubasta" class="calendar form-control" />

                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="description">Valor minimo:</label>
                        <input ng-model="valorMinimo" type="text" class="form-control" id="valorMinimo">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-8">
                        <label for="pais">Residencia:</label>
                        <select ng-model="propiedad" type="text" class="form-control propiedad-select" id="propiedad_select" placeholder="Seleccione una propiedad">
                            <option id="{{ prop.IdPropiedad }}" value="{{ prop.IdPropiedad }}" ng-repeat="prop in propiedades"> {{ prop.Nombre}} ({{prop.Pais}})</option>
                        </select>

                    </div>
                </div>
            </form>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <button type="button" id="boton-crear-subasta" style="display:none" ng-click="crearsubasta()" class="btn btn-primary">Agregar</button>
            <button type="button" id="boton-modificar-subasta" style="display:none" ng-click="modificarsubasta()" class="btn btn-primary">Guardar Cambios</button>
        </div>
    </div>
</div>
