@{
    ViewBag.Title = "SUBASTAS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row justify-content-center pb-5">
        <div class="col-md-7 text-center heading-section ftco-animate fadeInUp ftco-animated">
            <h4 class="subheading">SUBASTAS</h4>
        </div>
    </div>
</div>

<div ng-controller="subastasController">
    <section class="ftco-section services-section" id="destacados">
        <div class="container">
            <div class="row">
                <div class="btn-toolbar py-2" role="toolbar" aria-label="Toolbar with button groups">
                    <div class="btn-group btn-group-sm mr-2" role="group" aria-label="First group">
                        <button type="button" class="btn btn-success add-nueva-subasta" data-toggle="modal" data-target="#addEditSubastaModal"><i class="fa fa-fw fas fa-plus"></i></button>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col col-sm-4" ng-repeat="subasta in subastasList">
                    <div class="card flexcss">
                        <div class="card-header">
                            <h5 class="card-title">{{subasta.Propiedad.Nombre}}</h5>
                        </div>

                        <div class="card-body">
                            <p class="card-text"> <h6>Fecha de comienzo : {{subasta.FechaComienzo | date: "yyyy-MM-dd"}} </h6> Valor Actual: <br> {{subasta.ValorActual}} USD</p>

                            <div class="card-footer">
                                <button id="{{subasta.IdSubasta}}" class="btn btn-group-sm btn-primary subasta-puja" data-toggle="modal" data-target="#pujaSubastaModal"><i class="fa fa-fw fas fa-hand-paper-o"></i></button>
                                <button id="{{subasta.IdSubasta}}" class="btn btn-group-sm btn-primary subasta-seleccionada" data-toggle="modal" data-target="#addEditPropiedadModal"><i class="fa fa-fw fas fa-pencil-square-o"></i></button>
                                <button id="{{subasta.IdSubasta}}" ng-click="borrar($event.currentTarget.id)" class="btn btn-group-sm btn-danger subasta-a-borrar"> <i class="fa fa-fw fas fa-remove"></i></button>

                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </section>

    <div class="modal fade" id="pujaSubastaModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        @Html.Partial("_PujaSubasta")
    </div>

    <div class="modal fade" id="addEditSubastaModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        @Html.Partial("_AgregarEditarSubasta")
    </div>
</div>

<script src="~/Scripts/app/Subastas_AngularJS.js"></script>
<script src="~/Scripts/app/subastaSection.js"></script>